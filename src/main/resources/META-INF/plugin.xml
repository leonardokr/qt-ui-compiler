<idea-plugin>
    <id>com.ziondev.qt-ui-compiler</id>
    <name>Qt UI Compiler</name>
    <vendor email="leo@ziondev.us">ZionDev</vendor>

    <description><![CDATA[
    <p>The <b>Qt UI Compiler</b> automates the conversion of Qt Designer <code>.ui</code> files to Python code.</p>

    <h3>Supported Frameworks</h3>
    <ul>
        <li><b>PyQt6</b> (pyuic6)</li>
        <li><b>PySide6</b> (pyside6-uic)</li>
        <li><b>PyQt5</b> (pyuic5)</li>
        <li><b>PySide2</b> (pyside2-uic)</li>
        <li><b>Native Qt</b> (uic) - for C++ projects</li>
    </ul>

    <h3>Features</h3>
    <ul>
        <li><b>Automatic Compilation:</b> Generates output files instantly upon saving changes to the .ui file.</li>
        <li><b>Full Integration:</b> Shortcuts (Ctrl+Alt+U) and context menus for manual compilation.</li>
        <li><b>Flexible:</b> Support for virtual environments (venv), relative paths, and glob file filters.</li>
        <li><b>Cross-Platform:</b> Works on Windows, macOS, and Linux.</li>
    </ul>

    <p>Configure it in <i>Settings | Tools | Qt UI Compiler</i> to customize paths and outputs, or just get started with auto-detection.</p>
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.QtUiCompilerBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable 
            parentId="tools" 
            instance="com.ziondev.qtui.settings.QtUiCompilerConfigurable"
            id="com.ziondev.qtui.settings.QtUiCompilerConfigurable"
            key="settings.displayName"/>
        
        <applicationService 
            serviceImplementation="com.ziondev.qtui.settings.QtUiCompilerSettings"/>

        <notificationGroup id="Qt UI Compiler" displayType="BALLOON" key="notification.group.name"/>
    </extensions>

    <actions>
        <action id="com.ziondev.qtui.actions.CompileUiFileAction" 
                class="com.ziondev.qtui.actions.CompileUiFileAction">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
            <add-to-group group-id="ProjectViewPopupMenu" anchor="first"/>
            <add-to-group group-id="EditorTabPopupMenu" anchor="first"/>
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="control alt U"/>
        </action>
    </actions>

    <projectListeners>
        <listener class="com.ziondev.qtui.listeners.UiFileChangeListener"
                  topic="com.intellij.openapi.vfs.newvfs.BulkFileListener"/>
    </projectListeners>
</idea-plugin>